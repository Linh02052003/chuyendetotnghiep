<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='copyright' content=''>
    <link rel="icon" type="image/png" href="~/img/logo/favicon.png">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/magnific-popup.min.css">
    <link rel="stylesheet" href="~/Content/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/niceselect.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/flex-slider.min.css">
    <link rel="stylesheet" href="~/Content/owl-carousel.css">
    <link rel="stylesheet" href="~/Content/slicknav.min.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/css.css">
    <link rel="stylesheet" href="~/Content/responsive.css">
    <link href="~/Content/css/thongbao.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/themify-icons/1.0.0/css/themify-icons.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

    <style>
        /* Cố định toàn bộ header */
        header.header {
            position: fixed !important;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Đảm bảo header nằm trên các phần tử khác */
            background-color: #fff; /* Đặt màu nền để tránh trong suốt */
        }

        /* Đẩy nội dung bên dưới xuống để không bị che bởi header cố định */
        body {
            padding-top: 150px; /* Điều chỉnh giá trị này dựa trên chiều cao của toàn bộ header */
        }

        /* Đảm bảo preloader không bị ảnh hưởng */
        .preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #fff;
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .preloader-inner {
            text-align: center;
        }

        .preloader.fade-out {
            opacity: 0;
            transition: opacity 0.5s ease;
            pointer-events: none;
        }

        /* Xóa CSS cố định cho header-inner vì đã áp dụng cho toàn bộ header */
        .header-inner {
            position: static !important; /* Đặt lại để header-inner không bị cố định riêng */
        }

        /* CSS cho search bar */
        .search-bar-top {
            width: 100%;
        }

        .search-bar {
            display: flex;
            align-items: center;
            width: 100%; /* Đảm bảo search bar chiếm toàn bộ chiều rộng của container */
            border: 1px solid #ccc; /* Giữ viền giống hình ảnh */
            border-radius: 5px; /* Bo góc nhẹ */
        }

            .search-bar input[name="skey"] {
                flex: 1; /* Ô input chiếm toàn bộ không gian còn lại */
                border: none; /* Xóa viền mặc định của input */
                padding: 10px;
                outline: none; /* Xóa viền focus */
                font-size: 16px;
            }

            
    </style>
</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header -->
    <header class="header shop">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="top-left">
                            <ul class="list-main">
                                <li><i class="bx bx-headphone"></i> +060 (800) 801-582</li>
                                <li><i class="bx bx-envelope"></i> info@bookstore.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12 col-12">
                        <div class="right-content">
                            <ul class="list-main">
                                <li><i class="bx bx-map"></i> 2 Nguyễn Đình Chiểu, Nha Trang</li>
                                @if (Session["KhachHang"] == null || string.IsNullOrEmpty(Session["KhachHang"]?.ToString()))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Dangnhap")">
                                            <i class="bx bx-log-in"></i> Đăng Nhập
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Dangky")">
                                            <i class="bx bx-user-plus"></i> Đăng Ký
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <span class="nav-link">
                                            <i class="bx bx-user"></i> @Session["HoTen"]
                                        </span>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Logout", "Dangnhap")">
                                            <i class="bx bx-log-out"></i> Thoát
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Topbar -->
        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <div class="logo">
                            <a href="@Url.Action("Index","Home")"><img src="~/img/logo/logo.png" alt="logo"></a>
                        </div>
                        <div class="search-top"></div>
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar">
                                @using (Html.BeginForm("TimKiem", "Home"))
                                {
                                    <input name="skey" placeholder="Nhập thông tin tìm kiếm....." type="text">
                                    <button class="btnn" type="submit"><i class="bx bx-search"></i></button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            @if (Session["KhachHang"] != null && !string.IsNullOrEmpty(Session["KhachHang"]?.ToString()))
                            {
                                <div class="sinlge-bar">
                                    <a href="@Url.Action("Index", "Thongtin")" class="single-icon" title="Xem/Chỉnh sửa thông tin">
                                        <i class="bx bx-user-circle"></i>
                                    </a>
                                </div>
                            }
                            <div class="sinlge-bar shopping">
                                <a href="@Url.Action("Index","Giohang")" class="single-icon">
                                    <i class="bx bx-cart"></i>
                                    @if (ViewBag.Tongsoluong != null)
                                    {
                                        <span class="total-count">@ViewBag.Tongsoluong</span>
                                    }
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-9 col-12">
                            @Html.Action("Menu", "Module")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>

    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Start Footer Area -->
    <footer class="footer">
        <div class="footer-top section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-6 col-12">
                        <div class="single-footer about">
                            <div class="logo">
                                <a href="index.html"><img src="~/img/logo/logo2.png" alt="#"></a>
                            </div>
                            <p class="text">Website bán sách trực tuyến của Books Store, hỗ trợ 24/7 cùng nhiều ưu đẫi hấp dẫn. Luôn luôn cập nhật mới nhiều loại sách.</p>
                            <p class="text">Cần hỗ trợ liên hệ với chúng tôi: <span><a href="tel:123456789">+0123 456 789</a></span></p>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 col-12">
                        <div class="single-footer links">
                            <h4>Information</h4>
                            <ul>
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Faq</a></li>
                                <li><a href="#">Terms & Conditions</a></li>
                                <li><a href="#">Contact Us</a></li>
                                <li><a href="#">Help</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 col-12">
                        <div class="single-footer links">
                            <h4>Customer Service</h4>
                            <ul>
                                <li><a href="#">Payment Methods</a></li>
                                <li><a href="#">Money-back</a></li>
                                <li><a href="#">Returns</a></li>
                                <li><a href="#">Shipping</a></li>
                                <li><a href="#">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12">
                        <div class="single-footer social">
                            <h4>Thông tin</h4>
                            <div class="contact">
                                <ul>
                                    <li>Số 2 Nguyễn Đình Chiểu, Nha Trang, Khánh Hòa</li>
                                    <li>Chủ Trang: Võ Thùy Linh</li>
                                    <li>info@bookstore.com</li>
                                    <li>+012 3456 7890</li>
                                </ul>
                            </div>
                            <ul>
                                <li><a href="#"><i class="bx bxl-facebook"></i></a></li>
                                <li><a href="#"><i class="bx bxl-twitter"></i></a></li>
                                <li><a href="#"><i class="bx bxl-pinterest"></i></a></li>
                                <li><a href="#"><i class="bx bxl-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Jquery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery-migrate-3.0.0.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Color JS -->
    <script src="~/Scripts/colors.js"></script>
    <!-- Slicknav JS -->
    <script src="~/Scripts/slicknav.min.js"></script>
    <!-- Owl Carousel JS -->
    <script src="~/Scripts/owl-carousel.js"></script>
    <!-- Magnific Popup JS -->
    <script src="~/Scripts/magnific-popup.js"></script>
    <!-- Waypoints JS -->
    <script src="~/Scripts/waypoints.min.js"></script>
    <!-- Countdown JS -->
    <script src="~/Scripts/finalcountdown.min.js"></script>
    <!-- Nice Select JS -->
    <script src="~/Scripts/nicesellect.js"></script>
    <!-- Flex Slider JS -->
    <script src="~/Scripts/flex-slider.js"></script>
    <!-- ScrollUp JS -->
    <script src="~/Scripts/scrollup.js"></script>
    <!-- Onepage Nav JS -->
    <script src="~/Scripts/onepage-nav.min.js"></script>
    <script src="~/Scripts/easing.js"></script>
    <script src="~/Scripts/active.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>